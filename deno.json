{
  "fmt": {
    "useTabs": true,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/testdata/", "src/fixtures/**/*.ts"]
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "exclude": ["no-unused-vars", "no-explicit-any", "no-explicit-any"]
    }
  },
  "tasks": {
    "style": "npx tailwindcss -i ./src/style.css -o ./src/assets/styles/output.css --watch"
  }
}
